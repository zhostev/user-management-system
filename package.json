{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "User management system with TypeScript, Express and React",
  "main": "dist/backend/index.js",
  "scripts": {
    "start": "node dist/backend/index.js",
    "dev:backend": "ts-node-dev -P tsconfig.backend.json src/backend/index.ts",
    "dev:frontend": "cd client && npm start",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd client && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "test": "jest"
  },
  "keywords": [
    "typescript",
    "express",
    "react",
    "user-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.9",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}